<!-- SLIDING LAYOUT -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="false"
    android:id="@+id/dragView">

    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/ln_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorbottomPlay"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorbottomPlay"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imagemmm"
                android:layout_width="33dp"
                android:layout_height="30dp"
                app:color="@color/colorbottomPlay"
                android:src="@drawable/artsong"
                android:scaleType="centerCrop"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/colorbottomPlay"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_song"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Name"
                android:maxLines="1"
                android:textStyle="bold"
                android:background="@color/colorbottomPlay" />
            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Artist"
                android:maxLines="1"
                android:background="@color/colorbottomPlay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_playS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorbottomPlay"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_previous" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/im_play"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play" />

            <ImageView
                android:id="@+id/im_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/play_now"/>

</LinearLayout>