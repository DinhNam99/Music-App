<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="5dp"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/artsong"
        android:id="@+id/item_imagePL"
        />
    <TextView
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/item_imagePL"
        android:id="@+id/namepl_dialog"
        />
    <TextView
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 songs"
        android:id="@+id/numSong_dialog"
        android:layout_toRightOf="@id/item_imagePL"
        android:layout_below="@id/namepl_dialog"
        android:textSize="18dp"
        />

</RelativeLayout>